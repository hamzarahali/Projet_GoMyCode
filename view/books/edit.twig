{% extends "./index.twig" %}

{% block pageTitle %}
    Edit Book
{% endblock %}

{% block main %}

<h2 class="alert alert-success text-center py-5"> Edit Book </h2>
    
    <div class="row"> 
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
                 <div class="form-group">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-8" style="padding : 0px 0px">
                                              
                            </div>
                            <div class="col-md-2"></div>
                        </div>
            <form action="/books/edit/{{book.id}}" method="post">
                <div class="container"  style="padding : 20px 40px ">    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                    <label for="sex"> Email  : </label>
                            </div>          
                            <div class="col-md-6">
                                <input type="text" value="{{user.email}}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                    <label for="sex"> Hotel  : </label>
                            </div>          
                            <div class="col-md-6">
                                <select class="form-control">
                                    <option type="text" value="{{hotel.id}}" class="form-control" > {{hotel.title}} </option>
                                    {% for hotel2 in hotels %}
                                        {% if ( hotel2.id != hotel.id ) %}
                                            <option  type="text" value="{{hotel2.id}}" class="form-control" > {{hotel2.title}} </option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                    <label for="sex"> Date  : </label>
                            </div>          
                            <div class="col-md-6">
                                <input type="datetime-local" name="date" class="form-control" id="sex" required >
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row"> 
                            <div class="col-md-4">
                                <label>Person :</label>
                            </div>
                            <div class="col-md-6">
                                <input type="number" name="nbperson" class="form-control" value="{{book.nbperson}}" required>
                            </div>
                        </div>  
                    </div>
                    </div>       
		        </div>            
        <div class="row" style="padding:0px 0px">  
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <input type="submit" value="Edit" class="btn btn-danger form-control">
               
            </div>
        <div class="col-md-4"></div>
    </div>
	        </form>
    </div>
{% endblock %}